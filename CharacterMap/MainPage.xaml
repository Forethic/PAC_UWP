<Page
    x:Class="CharacterMap.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator},Path=Main}"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar IsOpen="False" ClosedDisplayMode="Minimal">
            <AppBarButton x:Name="BtnAbout" Icon="Help" Label="About" Click="BtnAbout_Click"/>
        </CommandBar>
    </Page.BottomAppBar>


    <Grid
        Padding="10"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ComboBox x:Name="CmbFontFamily" x:Uid="CmbFontFamily" Width="300"
                      ItemsSource="{Binding FontList}"
                      SelectedItem="{Binding SelectedFont, Mode=TwoWay}"
                      SelectedValuePath="Name">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <SearchBox  x:Name="SearchBoxUnicode"
                        PlaceholderText="Unicode"
                        BorderBrush="{ThemeResource SystemControlForegroundChromeDisabledLowBrush}"
                        QuerySubmitted="SearchBoxUnicode_QuerySubmitted"
                        Margin="10 0 0 0" VerticalAlignment="Bottom" MinWidth="170" SearchHistoryEnabled="True"/>

            <ToggleSwitch x:Name="ToggleTheme" VerticalAlignment="Bottom"
                          Margin="20 0 0 0" 
                          OffContent="Light Theme" OnContent="Dark Theme" 
                          Toggled="ToggleTheme_Toggled"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="{ThemeResource TextControlBorderThemeThickness}"
                    BorderBrush="{ThemeResource SystemControlForegroundChromeDisabledLowBrush}">
                <GridView x:Name="CharGrid" Padding="4"
                          ItemsSource="{Binding Chars}"
                          SelectionChanged="CharGrid_SelectionChanged">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" 
                                    Height="50" Width="50"
                                    BorderBrush="{ThemeResource SystemControlDisabledChromeHighBrush}">
                                <TextBlock FontFamily="{Binding ElementName=CmbFontFamily, Path=SelectedValue}" 
                                           Text="{Binding Char}"
                                           FontSize="22"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Border>

            <Border x:Name="PreviewPanel" Grid.Column="1" Margin="10 0"
                    Padding="10" BorderThickness="{ThemeResource TextControlBorderThemeThickness}"
                    BorderBrush="{ThemeResource SystemControlForegroundChromeDisabledLowBrush}">
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Viewbox Height="Auto" Width="Auto" Grid.Row="0"
                             Stretch="Uniform" StretchDirection="Both">
                        <Grid x:Name="GridRenderTarget" MinHeight="900" MinWidth="900">
                            <Viewbox>
                                <TextBlock x:Name="TxtPreview" TextAlignment="Center"
                                           FontFamily="{Binding ElementName=CmbFontFamily,Path=SelectedValue}"/>
                            </Viewbox>
                        </Grid>
                    </Viewbox>
                    <StackPanel Grid.Row="1">
                        <TextBox x:Uid="TxtUnicode" IsReadOnly="True"
                                 x:Name="Txtunicode" Foreground="#666"
                                 TextAlignment="Center" Margin="0 10" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="BtnSelect" x:Uid="BtnSelect" Click="BtnSelect_Click" HorizontalAlignment="Stretch" />
                            <Button x:Name="BtnSavePng" x:Uid="BtnSavePng" Click="BtnSavePng_Click" HorizontalAlignment="Stretch" Grid.Column="2" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Padding="5"
                    BorderBrush="{ThemeResource SystemControlForegroundChromeDisabledLowBrush}"
                    BorderThickness="{ThemeResource TextControlBorderThemeThickness}">
                <TextBlock x:Name="TxtSelected" FontFamily="{Binding ElementName=CmbFontFamily,Path=SelectedValue}" FontSize="28" />
            </Border>
            <Button x:Uid="BtnCopy" Grid.Column="1" VerticalAlignment="Top"
                    Height="55" Padding="20 0" Margin="20 0 0 0"
                    Click="BtnCopy_Click" />
        </Grid>

        <Grid Grid.Row="3" Margin="0 5 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="0 0 5 0 " x:Name="TxtXamlCode" x:Uid="TxtXamlCode" GotFocus="TxtXamlCode_GotFocus" />
            <TextBox Grid.Column="1" Margin="5 0 0 0 " x:Name="TxtFontIcon" x:Uid="TxtFontIcon" GotFocus="TxtFontIcon_GotFocus" />
        </Grid>
    </Grid>
</Page>